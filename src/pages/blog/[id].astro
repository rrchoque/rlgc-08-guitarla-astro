---
import Layout from '../../layouts/Layout.astro';
import {formatearFecha} from '../../utils/helpers'

export async function getStaticPaths() {
    const url = `${import.meta.env.PUBLIC_API_URL}/posts?populate=imagen`
    const respuesta = await fetch(url)
    const { data } = await respuesta.json()

    return data.map(post => ({
        params: {
            id: post.attributes.url
        },
        props: {
            post: post.attributes
        }
    }))
}

const { titulo, imagen, contenido, publishedAt } = Astro.props.post
---
<Layout title={ titulo } description="GuitarLA - Nuestra colecciÃ³n de posts">
    <article class="post mt-3">
        <img class="imagen" src={imagen.data.attributes.url} alt={`Imagen del post ${titulo}`} />
        <div class="contenido" >
          <h3>{titulo}</h3>
          <p class="fecha">{formatearFecha(publishedAt)}</p>
          <p class="texto">{contenido}</p>
        </div>
      </article>
</Layout>

<style>
.post {
    max-width: 80rem;
    margin: 0 auto;
}
